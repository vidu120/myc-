#include <iostream>
using namespace std;

int main() {
	long int n;
	cin >> n;
	while (n--) {
		long int a[3] = { };
		for (int i = 0; i < 3; i++) {
			cin >> a[i];
		}
		long int d = 0 ;
		d = ((((a[0]- 2)*180) - (a[0]*a[1]))*2)/((a[0]- 1)*a[0]);
		d = a[1] + ((a[2]-1)*(d));
		cout<<d<<endl;
		// now we know that we need
	}
	return 0;
}
