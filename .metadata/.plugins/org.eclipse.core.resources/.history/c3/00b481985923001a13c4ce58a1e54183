#include <iostream>
using namespace std;

int main() {
	long int n;
	cin >> n;
	while (n--) {
		long int a[3] = { };
		for (int i = 0; i < 3; i++) {
			cin >> a[i];
		}
		long int d = 0;
		d = (((a[0] - 2) * 180) - (a[0] * a[1])) * 2;
		d = (a[1] * (a[0] - 1) * a[0]) + ((a[2] - 1) * d);
		int ans[2] = { };
		ans[0] = d;
		ans[1] = (a[0] - 1) * a[0];
		long int l = 0;
		for (int i = 0; i < (a[0] - 1) * a[0]; i++) {
			l = (a[0] - 1) * a[0];
			if ((ans[0] % l == 0) & (ans[1] % l == 0)) {
				ans[0] = ans[0] / l;
				ans[1] = ans[1] / l;
				cout << ans[0] << " " << ans[1] << endl;
				break;
			}
			l = l - 1;
		}
		// now we know that we need
	}
	return 0;
}
